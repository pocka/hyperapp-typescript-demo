{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"jsRules": {},
	"rules": {
		"semicolon": [
			true,
			"never"
		],
		"quotemark": [
			true,
			"single",
			"jsx-double",
			"avoid-escape"
		],
		"arrow-parens": [
			true,
			"ban-single-arg-parens"
		],
		"interface-name": [
			true,
			"never-prefix"
		],
		"object-literal-sort-keys": false,
		"ordered-imports": false,
		"trailing-comma": [
			true,
			{
				"multiline": "never",
				"singleline": "never"
			}
		],
		"no-console": [
			true,
			"log"
		],
    "no-empty-interface": false,
    "no-unused-expression": false,
    "only-arrow-functions": false,
    "interface-over-type-literal": false
	},
	"rulesDirectory": []
}
